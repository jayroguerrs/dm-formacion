---
import { WYSIWYG_CLASSES } from '@/utils/constants';
import { directusFileURL } from '@/utils/directus';
import { Image } from 'astro:assets';

interface Props {
  image: string;
  name: string;
  profession: string;
  linkedin: string;
  description: string;
  descriptionList: string;
}
const { image, name, profession, linkedin, description, descriptionList } =
  Astro.props;
---

<div
  class="bg-[#F7F7FC] rounded-lg grid grid-cols-1 gap-4 p-4 md:grid-cols-[auto_1fr] lg:p-8"
>
  <div class="flex flex-col gap-4 justify-center items-center">
    <Image
      src={directusFileURL(image)}
      alt={name}
      width={78}
      height={78}
      class="w-[72px] h-[72px] md:w-[168px] md:h-[168px] rounded-full border-[3px] border-white shadow-md"
    />
    <div class="flex flex-col">
      <div class="text-[#552685] font-bold text-sm text-center md:text-xl">
        {name}
      </div>
      <div class="text-dm-gray-8 text-[10px] text-center md-text-base">
        {profession}
      </div>
    </div>
    <a href={linkedin} target="_blank">
      <Image
        src="/assets/linkedin-color.icon.svg"
        alt="linkedin"
        width={22}
        height={22}
      />
    </a>
  </div>
  <div class="flex flex-col gap-4 justify-center">
    <div
      set:html={description}
      class:list={[
        WYSIWYG_CLASSES,
        'text-[10px] text-dm-gray-8 text-center md:text-base md:text-left',
      ]}
    />
    <div
      set:html={descriptionList}
      class:list={[WYSIWYG_CLASSES, 'text-[10px] text-dm-gray-8 md:text-base']}
    />
  </div>
</div>
