---
import { Image } from 'astro:assets';

interface Props {
  alliances: { name: string; logo: string }[];
}

const { alliances } = Astro.props;
---

<style is:global>
  @keyframes alliances1 {
    from {
      transform: translateX(100%);
    }
    to {
      transform: translateX(-100%);
    }
  }
  @keyframes alliances2 {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-200%);
    }
  }

  #alliances1 {
    animation: alliances1 30s -15s linear infinite;
  }
  #alliances2 {
    animation: alliances2 30s linear infinite;
  }
</style>

<div class="container mx-auto p-4">
  <div>
    <h2 class="text-center text-secondary font-bold text-2xl lg:text-4xl">
      Contamos con las mejores alianzas
    </h2>

    <div
      class="w-[calc(100vw_-_3rem)] overflow-hidden flex items-center relative h-[150px] sm:w-full"
    >
      <div class="flex items-center" id="alliances1">
        {
          alliances.map(alliance => (
            <div class="w-48 h-full flex items-center shrink-0 px-8">
              <Image
                src={alliance.logo}
                alt={alliance.name}
                class="w-full h-full object-cover"
                width={200}
                height={70}
                loading="lazy"
              />
            </div>
          ))
        }
      </div>
      <div class="flex items-center" id="alliances2">
        {
          alliances.map(alliance => (
            <div class="w-48 h-full flex items-center shrink-0 px-8">
              <Image
                src={alliance.logo}
                alt={alliance.name}
                class="w-full h-full object-cover"
                width={200}
                height={70}
                loading="lazy"
              />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
