---
import { Image } from 'astro:assets';

interface Props {
  items: { text: string; url?: string; icon?: string }[];
}
const { items } = Astro.props;
---

<div class="bg-[#F9FAFF]">
  <div class="container mx-auto p-4">
    <div class="flex items-center justify-start gap-1">
      {
        items.map((item, index) => (
          <div class="flex items-center gap-1">
            <div class="flex items-center gap-1 text-[10px] text-[#5A7184] lg:text-base">
              {item.icon && (
                <Image src={item.icon} alt={item.text} width={18} height={18} />
              )}
              {item.url ? (
                <a href={item.url} class="hover:underline">
                  {item.text}
                </a>
              ) : (
                <span>{item.text}</span>
              )}
            </div>
            {index < items.length - 1 && (
              <Image
                src="/assets/img/breadcrumb-separator.svg"
                alt="separator"
                width={20}
                height={20}
              />
            )}
          </div>
        ))
      }
    </div>
  </div>
</div>
